# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/iptv_db?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Public base URL (optional - used for playlist/EPG export links)
PUBLIC_BASE_URL=http://localhost:5000

# Export caching (optional)
PLAYLIST_CACHE_TTL_SECONDS=300
PLAYLIST_CACHE_MAX_ITEMS=50
EPG_CACHE_TTL_SECONDS=300
EPG_CACHE_MAX_ITEMS=10

# Playlist token expiry (days, set <=0 to disable)
PLAYLIST_TOKEN_TTL_DAYS=30

# Export rate limiting (per token or MAC)
EXPORTS_RATE_LIMIT_WINDOW_MINUTES=15
EXPORTS_RATE_LIMIT_MAX=300

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Device auto-activation
# Controls which active ADMIN/MODERATOR account should own devices auto-registered via the TV playlist endpoint.
AUTO_ACTIVATE_DEVICE_EMAIL=admin@iptv.com

# OpenSubtitles API (for VOD Albanian subtitles)
# Get your API key at: https://www.opensubtitles.com/en/consumers
OPENSUBTITLES_API_KEY=your_api_key_here
OPENSUBTITLES_USER=your_username
OPENSUBTITLES_PASS=your_password

# YouTube Data API (for importing videos with Albanian captions)
# Get your API key at: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" for your project
YOUTUBE_API_KEY=your_youtube_api_key_here
